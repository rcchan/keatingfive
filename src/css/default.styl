.actor-panel {
    text-align: center;
    margin-top : 10px;
    margin-right : 10px;
    display : inline-block;
    padding : 10px;
    border : 1px solid #000000;
    border-radius : 5px;
    -moz-border-radius : 5px;
    -webkit-border-radius : 5px;
}

.actor-panel img {
    margin-bottom : 10px;
}

.actor-panel h3 {
    font-size : 0.9em;
}

.evidence-wrapper {
    display : table;
