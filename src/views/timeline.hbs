<script>
// Hack to remove times from display.
(function() {
  const original = Date.prototype.toUTCString;
  Date.prototype.toUTCString = function() {
    return original.apply(this, arguments).replace(/ GMT$/g, ' CST').replace(' 00:00:00 CST', '');
  }
})();
</script>
